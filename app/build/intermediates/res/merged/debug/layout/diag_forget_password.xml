<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.brain_socket.thagheralrafedain.view.EditTextCustomFont
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/diag_forget_password_email_required"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_product_price_badge"
        android:layout_margin="10dp"
        android:textColor="@color/txt_white"
        android:text="@string/diag_forget_password_btn_done"/>

</LinearLayout>