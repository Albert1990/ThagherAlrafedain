<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.brain_socket.thagheralrafedain.view.TextViewCustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/diag_forget_password_description"
        android:textColor="@color/txt_light_purple"
        android:textSize="@dimen/ts_text_small"
        app:fontId="1"/>

    <com.brain_socket.thagheralrafedain.view.EditTextCustomFont
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/diag_forget_password_email_hint"
        android:inputType="textEmailAddress"
        android:textColor="@color/txt_light_purple"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_frame_light_purple"
        android:text="@string/diag_forget_password_btn_done"
        android:textColor="@color/light_purple"/>

</LinearLayout>