<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_app_theme"
    tools:context="com.brain_socket.thagheralrafedain.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="18dp"
        tools:context="com.brain_socket.thageralforat.LoginActivity">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <com.brain_socket.thagheralrafedain.view.TextViewCustomFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_light_purple"
                android:gravity="center"
                android:textSize="@dimen/ts_text_big"
                android:text="@string/activity_register_new_account"
                android:layout_marginBottom="40dp"
                app:fontId="1"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_light_purple"
                android:hint="Your Email" />


            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/txt_white"
                android:textColorHint="@color/txt_light_purple"
                android:hint="Your Password" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbWorkshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:theme="@drawable/custom_checkbox"
                android:textColor="@color/txt_white"
                android:text="@string/activity_register_workshop_type"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="bottom"
        android:textColor="@color/txt_white"
        android:background="@drawable/shape_frame_white"
        android:text="Sign up" />

</FrameLayout>