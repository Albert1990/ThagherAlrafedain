<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_card_extruded_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp">


        <com.brain_socket.thagheralrafedain.view.RoundedImageView
            android:id="@+id/ivProduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/layer1"
            app:corner_radius="5dp" />

        <com.brain_socket.thagheralrafedain.view.TextViewCustomFont
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_product_name_badge"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:maxLines="2"
            android:text="@string/place_holder"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_text_small"
            app:fontId="1" />

        <com.brain_socket.thagheralrafedain.view.TextViewCustomFont
            android:id="@+id/tvBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/place_holder"
            android:textColor="@color/txt_gray_light"
            android:textSize="@dimen/ts_text_small"
            app:fontId="1" />

        <com.brain_socket.thagheralrafedain.view.TextViewCustomFont
            android:id="@+id/tvPrice"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_product_price_badge"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="2" />

    </LinearLayout>
</FrameLayout>